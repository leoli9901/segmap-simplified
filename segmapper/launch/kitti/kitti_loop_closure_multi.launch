<?xml version="1.0" encoding="utf-8"?>

<launch>

  <arg name="respawn_value" default="false" /> <!-- boolean: true, false -->

  <!-- Bag file path -->
  <arg name="bag_file1" value="$(env HOME)/Datasets/segmap_data/kitti_new_dataset/drive_18_0_45_na0.bag"/>
  <arg name="bag_file2" value="$(env HOME)/Datasets/segmap_data/kitti_new_dataset/drive_18_25_75_na1.bag"/>
  <arg name="bag_file3" value="$(env HOME)/Datasets/segmap_data/kitti_new_dataset/drive_18_85_190_na2.bag"/>
  <arg name="bag_file4" value="$(env HOME)/Datasets/segmap_data/kitti_new_dataset/drive_18_170_287_na3.bag"/>


  <!-- Rviz visualization config file path -->
  <arg name="rviz_config_file" value="$(find segmapper)/launch/kitti/kitti_loop_closure_multi.rviz"/>

  <!-- ROS parameters -->
  <rosparam>use_sim_time: false</rosparam>
  <rosparam command="load" file="$(find segmapper)/launch/kitti/kitti_loop_closure_multi.yaml"/>

  <!-- rviz node -->
  <node name="visualizer" pkg="rviz" type="rviz" output="screen" respawn="$(arg respawn_value)" args="-d $(arg rviz_config_file)" />




  <!-- segmapper node -->
  <include file="$(find segmapper)/launch/segmapper.launch">
    <arg name="icp_configuration_file" value="$(find segmapper)/launch/kitti/icp_dynamic_outdoor.yaml"/>
    <arg name="icp_input_filters_file" value="$(find segmapper)/launch/kitti/input_filters_outdoor.yaml"/>
  </include>
  
  <!-- rosbag player node -->
  <node name="player1" pkg="rosbag" type="play" output="screen" args=" -r 1 -s 0 -d 5 $(arg bag_file1)"/>
  <node name="player2" pkg="rosbag" type="play" output="screen" args=" -r 1 -s 0 -d 5 $(arg bag_file2)"/>
  <node name="player3" pkg="rosbag" type="play" output="screen" args=" -r 1 -s 0 -d 5 $(arg bag_file3)"/>
  <node name="player4" pkg="rosbag" type="play" output="screen" args=" -r 1 -s 0 -d 5 $(arg bag_file4)"/>



</launch>
